<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/color_word</item>
    </style>

    <!--Large-->
    <style name="THEME_FIXED" parent="AppTheme">
        <item name="android:textColor">@color/color_word</item>
        <item name="android:typeface">normal</item>
    </style>

    <!--Large-->
    <style name="THEME_LARGE" parent="AppTheme">
        <item name="android:textSize">42dp</item>
        <item name="android:textColor">@color/color_word</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="THEME_LARGE_2" parent="AppTheme">
        <item name="android:textSize">42dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:typeface">normal</item>
    </style>

    <!--Middle-->
    <style name="THEME_MIDDLE" parent="AppTheme">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/color_word</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="THEME_MIDDLE_2" parent="AppTheme">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:typeface">normal</item>
    </style>

    <!--Small-->
    <style name="THEME_SMALL" parent="AppTheme">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/color_word</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="THEME_SMALL_2" parent="AppTheme">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:typeface">normal</item>
    </style>

    <!--Middle-->
    <style name="THEME_VERY_SMALL" parent="AppTheme">
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">@color/color_word</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="THEME_VERY_SMALL_2" parent="AppTheme">
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:typeface">normal</item>
    </style>

</resources>
